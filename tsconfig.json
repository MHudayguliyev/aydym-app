{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@lang/*": ["./src/*"],
      "@app/*": ["./src/app/[locale]/*"], 
      "@components/*": ["./src/app/[locale]/components/*"],
      "@compLibrary/*": ["./src/app/[locale]/compLibrary/*"], 
      "@api/*": ["./src/app/[locale]/api/*"], 
      "@redux/*": ["./src/app/[locale]/redux/*"], 
      "@hooks/*": ["./src/app/[locale]/hooks/*"], 
      "@utils/*": ["./src/app/[locale]/utils/*"], 
      "@styles/*": ["./src/app/[locale]/styles/*"],
      "@assets/*": ["./src/app/[locale]/assets/*"], 
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
